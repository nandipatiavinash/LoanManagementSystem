<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.lendwise.controller.AddCustomerController"
      alignment="CENTER" spacing="15"
      style="-fx-padding: 20; -fx-background-color: #F0F3F5;">

    <Label text="Add Customer"
           style="-fx-font-size: 22px; -fx-font-weight: bold;"/>

    <GridPane hgap="10" vgap="10">
        <Label text="Name:" GridPane.rowIndex="0" GridPane.columnIndex="0"/>
        <TextField fx:id="txtName" GridPane.rowIndex="0" GridPane.columnIndex="1"/>

        <Label text="Age:" GridPane.rowIndex="1" GridPane.columnIndex="0"/>
        <TextField fx:id="txtAge" GridPane.rowIndex="1" GridPane.columnIndex="1"/>

        <Label text="Monthly Income:" GridPane.rowIndex="2" GridPane.columnIndex="0"/>
        <TextField fx:id="txtIncome" GridPane.rowIndex="2" GridPane.columnIndex="1"/>

        <Label text="Credit Score:" GridPane.rowIndex="3" GridPane.columnIndex="0"/>
        <TextField fx:id="txtCredit" GridPane.rowIndex="3" GridPane.columnIndex="1"/>

        <Label text="Contact Number:" GridPane.rowIndex="4" GridPane.columnIndex="0"/>
        <TextField fx:id="txtContact" GridPane.rowIndex="4" GridPane.columnIndex="1"/>

        <Label text="Email:" GridPane.rowIndex="5" GridPane.columnIndex="0"/>
        <TextField fx:id="txtEmail" GridPane.rowIndex="5" GridPane.columnIndex="1"/>
    </GridPane>

    <Button text="Save Customer"
            onAction="#onSaveCustomer"
            style="-fx-background-color: #4C8BF5; -fx-text-fill: white; -fx-font-weight: bold;"/>

</VBox>
